<!-- la última batalla usuario conectado -->
<% if !@score.nil? %>
	<p id="saved-score"><%=@score%></p>
	<p id="saved-session"><%=@session%></p>
  <p id="user"><%=@user%></p>
<% else %>
  <br>
  <br>
  <br>
<%end%>
<audio autoplay loop>
    <source src="/assets/finalMarch.mp3" type="audio/mpeg">
</audio>
<div class="alert alert-success" role="alert" style="visibility:hidden">Partida Guardada!</div>
<button id="savebutton" type="submit" class="btn btn-primary"> Guardar Partida </button>
<button id="reloadbutton" type="submit" class="btn btn-primary"> Reiniciar </button>
<button id="backbutton" type="submit" class="btn btn-primary"> Atrás </button>
<a href="#ranking" class="btn btn-primary">Ranking</a>
<canvas id="canvasTest" width="1280" height="600"></canvas>
<div id="overlapping">
    <canvas id="canvasEntities2" width="1280" height="600"></canvas>
    <canvas id="canvasDead" width="1280" height="600"></canvas>
    <canvas id="canvasScore" width="1280" height = "600"></canvas>
    <canvas id="canvasSeconds" width="1280" height = "600"></canvas>
</div>
<script src="/assets/game1.js"></script>
<div class="panel panel-default">
  <div class="panel-heading">Mejores Puntuaciones</div>
  <table class="table" id="ranking">
  	<thead>
  		<tr>
  			<th> #</th>
  			<th> Usuario </th>
  			<th> Puntuación </th>
  		</tr>
  	</thead>
  	<tbody>
  	<% @leaderboard.each_with_index do |l , index| %>
  		<tr>
  			<th scope="row"><%=index+1%></th>
  			<td> <%= l["email"] %> </td>
  			<td> <%= l["score"] %> </td>
  		</tr>
  	<%end%>
  	</tbody>
  </table>
</div>

