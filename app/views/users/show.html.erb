	<h2> Tus recién jugados </h2>
    <%@games_played.each do |g|%>
      <img class = "recentlyplayed" src=<%=g.game.url%> alt="...">
      <p> <%=g.score%> </p>
      <%= link_to "Borrar", game_game_session_path(g.game.id, g.id), {method: :delete, data: {confirm: "Seguro?"} }%>

      <%= link_to "Reanudar", continue_path(g.game.id, g.score), :method => "PUT" %>
    <%end%>
</div>

