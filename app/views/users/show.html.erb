<h2> Tus Partidas Guardadas </h2>
<div class="row">
  <%@games_played.each do |g| %>
  <div class="col-xs-6 col-md-3">
    <a href="#" class="thumbnail">
      <img class="recentlyplayed" src=<%=g.game.url%>>
      <%= link_to "Borrar", game_game_session_path(g.game.id, g.id), {method: :delete, data: {confirm: "Seguro?"} }%>
      <%= link_to "Reanudar", continue_path(g.game.id, g.score, g.id), {method: :put} %>
      <p> Puntuación: <%= g.score %> </p>
    </a>
  </div>
  <%end%>
</div>

